{
  "name": "susanoo",
  "version": "0.1.0",
  "private": true,
  "author": "Moayyad Faris",
  "scripts": {
    "start": "NODE_PATH=. node ./main.js",
    "start-server": "npm start",
    "dev": "NODE_PATH=. NODE_ENV=development nodemon ./main.js",
    "notifications-dev": "NODE_PATH=. NODE_ENV=development node ./consumers/notifications-consumer.js",
    "qr-code-service": "NODE_PATH=. NODE_ENV=development node sockets/QRSocketService.js",
    "testrun": "NODE_PATH=. NODE_ENV=development node ./main.js",
    "migrate": "NODE_PATH=. knex migrate:latest",
    "rollback": "NODE_PATH=. knex migrate:rollback",
    "seed": "NODE_PATH=. knex seed:run",
    "docs": "NODE_PATH=. ./node_modules/swagger-jsdoc/bin/swagger-jsdoc.js -d config/swagger.js controllers/**/app/**/*.js models/**/*.js -o public/docs/swagger.json",
    "docs-web": "NODE_PATH=. ./node_modules/swagger-jsdoc/bin/swagger-jsdoc.js -d config/swagger.js controllers/**/web/**/*.js models/**/*.js -o public/docs/swagger-web.json",
    "lint": "NODE_PATH=. ./node_modules/eslint/bin/eslint.js --fix \"**/*.js\"",
    "test": "NODE_PATH=. echo \">>> Keep in mind: to enshure right test you should set seed data and run server :) <<<\" && mocha test/**/*.test.js",
    "test-script": "NODE_PATH=. start-server-and-test start-server http://localhost:4000 test",
    "coverage": "NODE_PATH=. nyc --reporter=html --reporter=text mocha test/**/*.test.js",
    "update:packages": "node wipe-dependencies.js && rm -rf node_modules && npm update --save-dev && npm update --save"
  },
  "husky1": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "axios": "^1.12.2",
    "backend-core": "./core",
    "bcryptjs": "^3.0.2",
    "bull": "^4.16.5",
    "chalk": "^5.6.2",
    "express-rate-limit": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "ms": "^2.1.3",
    "multer": "^2.0.2",
    "nodemailer": "^6.9.16",
    "otplib": "^12.0.1",
    "socket.io": "^4.8.1",
    "stack-trace": "1.0.0-pre2",
    "stdout-stream": "^2.0.0",
    "swagger-stats": "^0.99.7",
    "twilio": "^5.4.0",
    "ua-parser-js": "^2.0.5",
    "uuid": "^13.0.0",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "chai": "^6.2.0",
    "chai-http": "^5.1.2",
    "eslint": "^9.37.0",
    "husky": "^9.1.7",
    "mocha": "^11.7.4",
    "nyc": "^17.1.0",
    "supertest": "^7.1.4",
    "swagger-jsdoc": "^6.2.8"
  }
}
