{
  "name": "susanoo",
  "version": "0.1.0",
  "private": true,
  "author": "Moayyad Faris",
  "scripts": {
    "jest": "jest --coverage",
    "coverall": "coveralls",
    "start": "node ./main.js",
    "start-server": "npm start",
    "dev": "NODE_ENV=development nodemon ./main.js",
    "notifications-dev": "NODE_ENV=development node ./consumers/notifications-consumer.js",
    "qr-code-service": "NODE_ENV=development node sockets/QRSocketService.js",
    "testrun": "NODE_ENV=test node ./main.js",
    "migrate": "knex migrate:latest",
    "rollback": "knex migrate:rollback",
    "seed": "knex seed:run",
    "docs": "./node_modules/swagger-jsdoc/bin/swagger-jsdoc.js -d config/swagger.js controllers/**/app/**/*.js models/**/*.js -o public/docs/swagger.json",
    "docs-web": "./node_modules/swagger-jsdoc/bin/swagger-jsdoc.js -d config/swagger.js controllers/**/web/**/*.js models/**/*.js -o public/docs/swagger-web.json",
    "lint": "./node_modules/eslint/bin/eslint.js --fix --config .eslintrc \"**/*.js\"",
    "test": "echo \">>> Keep in mind: to enshure right test you should set seed data and run server :) <<<\" && mocha test/**/*.test.js",
    "test-script": "start-server-and-test start-server http://localhost:4000 test",
    "coverage": "nyc --reporter=html --reporter=text mocha test/**/*.test.js",
    "update:packages": "node wipe-dependencies.js && rm -rf node_modules && npm update --save-dev && npm update --save"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "axios": "^0.21.1",
    "backend-core": "./core",
    "bcryptjs": "^2.4.3",
    "bull": "^3.20.0",
    "dotenv": "^8.2.0",
    "express-rate-limit": "^5.2.3",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "ms": "^2.1.3",
    "multer": "^1.4.2",
    "multer-s3": "^2.9.0",
    "nodemailer": "^6.4.17",
    "otplib": "^12.0.1",
    "request": "^2.88.2",
    "socket.io": "^3.0.5",
    "socket.io-redis": "^6.0.1",
    "socketio-auth": "^0.1.1",
    "stack-trace": "0.0.10",
    "stdout-stream": "^1.4.1",
    "swagger-stats": "^0.95.18",
    "twilio": "^3.54.2",
    "ua-parser-js": "^0.7.23",
    "uuid": "^8.3.0",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.17.0",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "standart": "^6.1.0",
    "start-server-and-test": "^1.11.7",
    "supertest": "^6.0.1",
    "swagger-jsdoc": "^6.0.1"
  }
}
